<%- include('./partials/head') %>

  
    <main>

        <section class="posts">
        <%
            posts
            .filter((post) => post.status == "publish") // only show published posts
            .forEach((post) => {
                %>
                <article class="post">
                    <a href="/post/<%= post.id %>" class="article-link">
                        <h3><%- post.title.rendered %></h3>
                    <img src="<%= post.yoast_head_json.og_image[0].url %>"></img>
                    </a>
                    <p>Door <a class="author" href="/author/<%= post.author %>"><%= post.yoast_head_json.author %></a></p>
                </article>
                <%
            })
        %>
        </section>

    </main>

    <%- include('./partials/footer') %>
